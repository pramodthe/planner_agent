# Travel Agents Environment Configuration

# =============================================================================
# API KEYS (Optional - system works with mock data if not provided)
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Apify API Token for hotel booking scraper
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Kiwi MCP Server (No API key required - public service)
KIWI_MCP_ENABLED=true
KIWI_MCP_HOST=mcp.kiwi.com
KIWI_MCP_PORT=443

# Apify MCP Server
APIFY_MCP_ENABLED=true

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Travel agents network configuration
TRAVEL_NETWORK_HOST=localhost
TRAVEL_NETWORK_HTTP_PORT=8800
TRAVEL_NETWORK_GRPC_PORT=8700

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Model configuration for all agents
DEFAULT_MODEL=gpt-4o-mini
MAX_ITERATIONS=8

# Agent group passwords (hashed)
COORDINATOR_PASSWORD_HASH=your_coordinator_password_hash_here
BOOKING_AGENTS_PASSWORD_HASH=your_booking_agents_password_hash_here
PLANNERS_PASSWORD_HASH=your_planners_password_hash_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging
DEBUG=false

# Mock data when APIs unavailable
USE_MOCK_DATA_FALLBACK=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env in your travel_agents directory
# 2. Uncomment and fill in API tokens if you want real data
# 3. The system works perfectly with mock data for testing
# 4. Kiwi MCP server is public - no API key needed!
# 5. For Apify, get token from: https://console.apify.com/account/integrations